<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_140sdp"
        android:orientation="horizontal"
        android:background="#e6e6e6">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/nav_image"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:scaleType="fitXY"
                android:src="@drawable/img_girl" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fonts_medium"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="#3e3e3e"
                android:lineSpacingExtra="3sp"
                android:gravity="center_horizontal"
                android:text="Teacher Name" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fonts_medium"
                android:textStyle="normal"
                android:textSize="10sp"
                android:textColor="#0a9524"
                android:lineSpacingExtra="3sp"
                android:gravity="center_horizontal"
                android:text="Active" />
        </LinearLayout>
        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="@dimen/_48sdp"
            android:background="#7e7e7e"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_20sdp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:background="@drawable/gradient_bar">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:gravity="center"
            android:text="Screen"
            android:textColor="#fff"
            android:fontFamily="@font/fonts_medium"
            android:textSize="17sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_15sdp">
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            app:cardCornerRadius="@dimen/_16sdp"
            android:background="@drawable/chat_in">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_girl"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:orientation="vertical"
            android:background="@drawable/gradient_bar">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fonts_medium"
                android:layout_marginVertical="@dimen/_5sdp"
                android:text="Hey Martin! How are you?"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:lineSpacingExtra="@dimen/_4sdp"
                android:textColor="#fff"
                android:textSize="14sp"
                android:textStyle="normal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fonts_medium"
                android:layout_marginVertical="@dimen/_5sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="3sp"
                android:text="07:33 PM" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_15sdp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/chat_out">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fonts_medium"
                android:layout_marginVertical="@dimen/_5sdp"
                android:text="Hey Martin! How are you?"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:lineSpacingExtra="@dimen/_4sdp"
                android:textColor="#3e3e3e"
                android:textSize="14sp"
                android:textStyle="normal"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fonts_medium"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:textColor="#7e7e7e"
                    android:lineSpacingExtra="3sp"
                    android:text="07:33 PM" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fonts_medium"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:textColor="#01b9ff"
                    android:lineSpacingExtra="3sp"
                    android:text="Received" />
            </LinearLayout>

        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            app:cardCornerRadius="@dimen/_16sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:background="@drawable/chat_in">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_girl"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_15sdp">
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            app:cardCornerRadius="@dimen/_16sdp"
            android:background="@drawable/chat_in">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_girl"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:orientation="vertical"
            android:background="@drawable/gradient_bar">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fonts_medium"
                android:layout_marginVertical="@dimen/_5sdp"
                android:text="Hey Martin! How are you?"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:lineSpacingExtra="@dimen/_4sdp"
                android:textColor="#fff"
                android:textSize="14sp"
                android:textStyle="normal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fonts_medium"
                android:layout_marginVertical="@dimen/_5sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="3sp"
                android:text="07:33 PM" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_15sdp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/chat_out">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fonts_medium"
                android:layout_marginVertical="@dimen/_5sdp"
                android:text="Hey Martin! How are you?"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:lineSpacingExtra="@dimen/_4sdp"
                android:textColor="#3e3e3e"
                android:textSize="14sp"
                android:textStyle="normal"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fonts_medium"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:textColor="#7e7e7e"
                    android:lineSpacingExtra="3sp"
                    android:text="07:33 PM" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fonts_medium"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:textColor="#01b9ff"
                    android:lineSpacingExtra="3sp"
                    android:text="Received" />
            </LinearLayout>

        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            app:cardCornerRadius="@dimen/_16sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:background="@drawable/chat_in">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_girl"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/chat_background">
            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_25sdp"
                android:scaleType="fitXY"
                android:src="@drawable/attach"
                app:tint="#3e3e3e"/>
            <EditText
                android:id="@+id/edit_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fonts_medium"
                android:hint="Type your message"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_gravity="center"
                android:textColorHint="#3e3e3e"
                android:background="@null"
                android:textSize="14sp"
                android:textStyle="normal"/>
            <RelativeLayout
                android:id="@+id/rel_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_micro"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/micro_phone"
                    app:tint="#3e3e3e"/>
                <ImageView
                    android:id="@+id/img_camera"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_toRightOf="@id/img_micro"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/camera"
                    app:tint="#3e3e3e"/>
                <ImageView
                    android:id="@+id/img_send"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_toRightOf="@id/img_micro"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/send"
                    app:tint="@color/colorPrimary"
                    android:visibility="gone"/>
            </RelativeLayout>




        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/_40sdp"
            app:cardCornerRadius="@dimen/_6sdp">
            <Button
                android:id="@+id/btn_wait"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Show Screen"
                android:textColor="#fff"
                android:textAllCaps="false"
                android:fontFamily="@font/fonts_medium"
                android:background="@drawable/gradient_bar"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/_40sdp"
            app:cardCornerRadius="@dimen/_6sdp"
            android:layout_marginLeft="@dimen/_10sdp">
            <Button
                android:id="@+id/btn_"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="End Share"
                android:textColor="#fff"
                android:textAllCaps="false"
                android:fontFamily="@font/fonts_medium"
                android:background="@drawable/back_black"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>