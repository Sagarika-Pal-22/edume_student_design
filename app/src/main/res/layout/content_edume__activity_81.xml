<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fonts_bold"
        android:layout_marginTop="@dimen/_20sdp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#3e3e3e"
        android:lineSpacingExtra="4sp"
        android:gravity="center_horizontal"
        android:text="EdumeApp" />

    <ImageView
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_marginVertical="@dimen/_80sdp"
        android:src="@drawable/noun_alarm"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fonts_medium"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="#3e3e3e"
                android:lineSpacingExtra="4sp"
                android:gravity="center_horizontal"
                android:text="Remind" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fonts_medium"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#753abc"
                android:lineSpacingExtra="4sp"
                android:gravity="center_horizontal"
                android:text="Your Class Time" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/_40sdp"
                app:cardCornerRadius="@dimen/_6sdp">
                <Button
                    android:id="@+id/btn_wait"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Dismiss"
                    android:textColor="@color/colorPrimary"
                    android:textAllCaps="false"
                    android:fontFamily="@font/fonts_medium"
                    android:background="@drawable/blue_box"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/_40sdp"
                app:cardCornerRadius="@dimen/_6sdp"
                android:layout_marginLeft="@dimen/_10sdp">
                <Button
                    android:id="@+id/btn_"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Go to Class"
                    android:textColor="#fff"
                    android:textAllCaps="false"
                    android:fontFamily="@font/fonts_medium"
                    android:background="@drawable/gradient_bar"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>