<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/linear_chapter">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="#3e3e3e"
        android:layout_marginHorizontal="@dimen/_10sdp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/chapter_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Chapter title"
                    android:fontFamily="@font/fonts_medium"
                    android:textColor="#3C3B3B"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/day"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="Yesteday"
                    android:fontFamily="@font/fonts_medium"
                    android:textColor="#3C3B3B"
                    android:textSize="12sp"
                    android:textStyle="normal"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:paddingLeft="@dimen/_20sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:src="@drawable/unlock"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/desc"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:text="Content forces and newton law "
                android:layout_marginVertical="@dimen/_3sdp"
                android:fontFamily="@font/fonts_medium"
                android:textColor="#3C3B3B"
                android:textSize="12sp"
                android:textStyle="normal"/>
                <TextView
                    android:id="@+id/view"
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:text="View 132"
                    android:layout_marginVertical="@dimen/_3sdp"
                    android:fontFamily="@font/fonts_medium"
                    android:textColor="#3C3B3B"
                    android:textSize="12sp"
                    android:textStyle="normal"/>
            </LinearLayout>
        <TextView
            android:id="@+id/subj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="English"
            android:fontFamily="@font/fonts_medium"
            android:textColor="#3C3B3B"
            android:textSize="12sp"
            android:textStyle="normal"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/lesson_code"
            android:layout_width="0dp"
            android:layout_weight="1.7"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Lesson Code: 03546"
            android:fontFamily="@font/fonts_medium"
            android:textColor="#3C3B3B"
            android:textSize="10sp"
            android:textStyle="normal"/>
            <ImageView
                android:id="@+id/img_more"
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:layout_height="wrap_content"
                android:src="@drawable/more_horiz"
                app:tint="#3e3e3e"/>
        </LinearLayout>
    </LinearLayout>





</LinearLayout>