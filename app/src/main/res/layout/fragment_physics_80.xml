<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/fonts_semibold"
        android:layout_marginVertical="@dimen/_20sdp"
        android:textStyle="normal"
        android:textSize="16sp"
        android:textColor="#3e3e3e"
        android:lineSpacingExtra="3sp"
        android:text="Select your Class Timings" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fonts_medium"
        android:layout_marginVertical="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="#7e7e7e"
        android:lineSpacingExtra="3sp"
        android:text="Weekday"
        android:textAllCaps="true"/>
    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/spin_privacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:fontFamily="@font/medium"
        android:text="Public"
        android:textColor="#3e3e3e"
        android:textSize="12sp"
        android:textStyle="bold"
        app:met_floatingLabel="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fonts_medium"
            android:layout_marginVertical="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:textStyle="normal"
            android:textSize="12sp"
            android:textColor="#7e7e7e"
            android:lineSpacingExtra="3sp"
            android:text="Subject"
            android:textAllCaps="true"/>
        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:fontFamily="@font/medium"
            android:text="Public"
            android:textColor="#3e3e3e"
            android:textSize="12sp"
            android:textStyle="bold"
            app:met_floatingLabel="normal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fonts_medium"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginVertical="@dimen/_10sdp"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="#7e7e7e"
                android:lineSpacingExtra="3sp"
                android:text="Time"
                android:textAllCaps="true"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fonts_semibold"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:textColor="#3e3e3e"
                    android:lineSpacingExtra="4sp"
                    android:text="9:00 AM" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/time"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:background="#7e7e7e"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_15sdp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:fontFamily="@font/fonts_bold"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#3e3e3e"
            android:lineSpacingExtra="4sp"
            android:text="Edit" />
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/_40sdp"
            app:cardCornerRadius="@dimen/_10sdp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Update"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:fontFamily="@font/fonts_medium"
                android:background="@drawable/gradient_bar"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fonts_medium"
        android:layout_marginVertical="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="#7e7e7e"
        android:lineSpacingExtra="3sp"
        android:text="Set reminder"
        android:textAllCaps="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fonts_semibold"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="#3e3e3e"
            android:lineSpacingExtra="4sp"
            android:text="9:00 AM" />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/time"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:background="#7e7e7e"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fonts_bold"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="#3e3e3e"
            android:lineSpacingExtra="4sp"
            android:text="Repeat" />
        <Switch
            android:id="@+id/switch_msg"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:checked="true"
            android:gravity="left"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:weightSum="7">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fonts_medium"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="#7e7e7e"
            android:lineSpacingExtra="4sp"
            android:text="MON"
            android:textAllCaps="true"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fonts_medium"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="#7e7e7e"
            android:lineSpacingExtra="4sp"
            android:text="Tue"
            android:textAllCaps="true"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fonts_medium"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="#7e7e7e"
            android:lineSpacingExtra="4sp"
            android:text="Wed"
            android:textAllCaps="true"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fonts_medium"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="#7e7e7e"
            android:lineSpacingExtra="4sp"
            android:text="Thu"
            android:textAllCaps="true"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fonts_medium"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="#7e7e7e"
            android:lineSpacingExtra="4sp"
            android:text="Fri"
            android:textAllCaps="true"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fonts_medium"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="#7e7e7e"
            android:lineSpacingExtra="4sp"
            android:text="Sat"
            android:textAllCaps="true"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fonts_medium"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="#7e7e7e"
            android:lineSpacingExtra="4sp"
            android:text="Sun"
            android:textAllCaps="true"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55sdp"
        android:layout_marginTop="@dimen/_20sdp"
        app:cardUseCompatPadding="true"
        android:layout_marginHorizontal="@dimen/_10sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fonts_semibold"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="#3e3e3e"
                android:lineSpacingExtra="4sp"
                android:text="Vibration" />
            <Switch
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:checked="true"
                android:gravity="left"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:cardUseCompatPadding="true"
        android:layout_marginHorizontal="@dimen/_10sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fonts_semibold"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="#3e3e3e"
                android:lineSpacingExtra="4sp"
                android:text="Music" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".8"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fonts_semibold"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:textColor="#753abc"
                    android:lineSpacingExtra="4sp"
                    android:text="Alarm Bell" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:src="@drawable/arrow_down"
                    app:tint="@color/colorPrimary"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_20sdp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Update"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:fontFamily="@font/fonts_medium"
            android:background="@drawable/gradient_bar"/>
    </androidx.cardview.widget.CardView>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>