<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/_10sdp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Library"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:fontFamily="@font/fonts_medium"
            android:background="@drawable/gradient_bar"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:background="@drawable/gradient_light"
        android:paddingHorizontal="@dimen/_10sdp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fonts_semibold"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="#753abc"
            android:lineSpacingExtra="4sp"
            android:text="My Subjects" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fonts_semibold"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="#753abc"
            android:lineSpacingExtra="4sp"
            android:text="+ Add Subject" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rv_mySubj"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250sdp"
                android:gravity="center"
                android:orientation="vertical"
                android:background="#f8f8f8">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/_100sdp"
                        app:cardBackgroundColor="#fff"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardUseCompatPadding="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/_10sdp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/fonts_semibold"
                                android:layout_marginHorizontal="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textStyle="normal"
                                android:textSize="14sp"
                                android:textColor="#3e3e3e"
                                android:lineSpacingExtra="4sp"
                                android:text="Exercise" />
                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:background="@drawable/red_light_back"
                                android:layout_marginVertical="@dimen/_10sdp"
                                android:layout_marginHorizontal="@dimen/_10sdp"
                                android:text="New Test"
                                android:textColor="#cc2d2d"
                                android:textAllCaps="false"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/_100sdp"
                        app:cardBackgroundColor="#fff"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardUseCompatPadding="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/_10sdp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/fonts_semibold"
                                android:layout_marginHorizontal="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textStyle="normal"
                                android:textSize="14sp"
                                android:textColor="#3e3e3e"
                                android:lineSpacingExtra="4sp"
                                android:text="Test Exam" />
                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/grey_background"
                                android:layout_marginVertical="@dimen/_10sdp"
                                android:layout_marginHorizontal="@dimen/_10sdp"
                                android:text="New Exam"
                                android:fontFamily="@font/fonts_semibold"
                                android:textColor="#7e7e7e"
                                android:textAllCaps="false"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/_90sdp"
                        app:cardBackgroundColor="#fff"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardUseCompatPadding="true">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/fonts_semibold"
                            android:layout_gravity="center"
                            android:textStyle="normal"
                            android:textSize="14sp"
                            android:textColor="#3e3e3e"
                            android:lineSpacingExtra="4sp"
                            android:text="Assignment" />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/_90sdp"
                        app:cardBackgroundColor="#fff"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardUseCompatPadding="true">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/fonts_semibold"
                            android:layout_gravity="center"
                            android:textStyle="normal"
                            android:textSize="14sp"
                            android:textColor="#3e3e3e"
                            android:lineSpacingExtra="4sp"
                            android:text="Model Exam" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_90sdp"
                    app:cardBackgroundColor="#fff"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardUseCompatPadding="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/fonts_semibold"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:textStyle="normal"
                        android:textSize="14sp"
                        android:textColor="#3e3e3e"
                        android:lineSpacingExtra="4sp"
                        android:gravity="center_horizontal"
                        android:text="Subject Set Class Timing" />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_90sdp"
                    app:cardBackgroundColor="#fff"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardUseCompatPadding="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fonts_semibold"
                        android:layout_gravity="center"
                        android:textStyle="normal"
                        android:textSize="14sp"
                        android:textColor="#3e3e3e"
                        android:lineSpacingExtra="4sp"
                        android:text="Activity Bin" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/gradient_bar">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:text="Chat Room"
                    android:textColor="#fff"
                    android:fontFamily="@font/fonts_medium"
                    android:textSize="17sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_girl" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fonts_light"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#753abc"
                        android:lineSpacingExtra="3sp"
                        android:text="Sharath" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fonts_semibold"
                        android:textStyle="normal"
                        android:textSize="14sp"
                        android:textColor="#7e7e7e"
                        android:lineSpacingExtra="4sp"
                        android:text="New Message" />
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:background="#e6e6e6"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_girl" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fonts_light"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#753abc"
                        android:lineSpacingExtra="3sp"
                        android:text="EdumeApp Team" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fonts_semibold"
                        android:textStyle="normal"
                        android:textSize="14sp"
                        android:textColor="#7e7e7e"
                        android:lineSpacingExtra="4sp"
                        android:text="New Chapter Available" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>